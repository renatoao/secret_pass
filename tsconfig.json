{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "types": [ "node" ]
    },
    "display": "Expo",

    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "@odg/tsconfig"
}
